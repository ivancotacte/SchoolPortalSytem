<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link rel="icon" type="image/x-icon" href="icct_favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.2/css/fontawesome.min.css"
    integrity="sha384-BY+fdrpOd3gfeRvTSMT+VUZmA728cfF9Z2G42xpaRkUGu2i3DyzpTURDo5A6CaLK" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <title>School Portal</title>
</head>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins%3Awght%40400%3B500&display=swap%27%29%3B");

  body {
    font-family: "Poppins", sans-serif;
    background: #ececec;
  }


  .box-area {
    width: 930px;
    margin: 40px 40px 40px 40px;
  }


  .left-box img {
    width: 160px;
  }

  .left-box h2 {
    font-size: 30px;
    margin-top: 10px;
    text-align: center;
  }


  .right-box {
    padding: 40px 30px 40px 40px;
  }

  .right-box p {
    margin-bottom: 0%;
  }


  ::placeholder {
    font-size: 16px;
  }

  .rounded-4 {
    border-radius: 20px;
  }

  .rounded-5 {
    border-radius: 30px;
  }

  @media only screen and (max-width: 768px) {
    .box-area {
      margin: 0 5px;
    }

    .left-box {
      height: 100px;
      overflow: hidden;
      text-align: center;
    }

    .left-box img {
      width: 100px;
    }

    .right-box {
      padding: 20px;
    }

    ::placeholder {
      font-size: 14px;
    }
  }
</style>

<body>
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row border rounded-5 p-3 bg-white shadow box-area">
      <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box"
        style="background: #030067">
        <div class="featured-image mb-3">
          <img src="icct_logo.png" class="img-fluid" />
        </div>
        <h2 style="color: #ececec;">Welcome to ICCTPortal</h2>
        <p style="color: #ececec;">We are happy to have you back.</p>
      </div>
      <div class="col-md-6 right-box">
        <div class="row align-items-center">
          <div class="header-text mb-4">
            <h2>Sign In</h2>
            <p>
              To access ICCT Portal, please make sure you meet the following
              requirements:
            </p>
          </div>
          <form action="/login" method="POST">
            <div class="input-group mb-3">
              <div class="input-group-text">@</div>
              <input type="email" name="emailAddress" class="form-control bg-light fs-6"
                placeholder="Email address / Student ID No." />
            </div>
            <div class="input-group mb-3">
              <div class="input-group-text bi bi-key-fill"></div>
              <input type="password" name="password" class="form-control bg-light fs-6"
                placeholder="Password" />
            </div>
<% if (errors && errors.emailAddress) { %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert" style="font-size:13px; transition: all 2s ease-out;">
    <%= errors.emailAddress.msg %>
  </div>
<% } else if (errors && errors.password) { %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert" style="font-size:13px; transition: all 2s ease-out;">
    <%= errors.password.msg %>
  </div>
<% } else if (errors) { %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert" style="font-size:13px; transition: all 2s ease-out;">
    <%= errors %>
  </div>
<% } %>
            <div class="input-group mb-3">
              <button class="btn btn-lg w-100 fs-6" style="background-color: #030067; color: #ececec;">
                LogIn
              </button>
            </div>
          </form>
          <div class="input-group mb-3">
            <button class="btn btn-lg btn-light w-100 fs-6" disabled>
              <img src="google_logo.png" style="width: 20px" class="me-2" /><small>Sign In with Google</small>
            </button>
          </div>
          <div class="input-group mb-5 d-flex justify-content-between">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="remember_me" value="remember-me" />
              <label for="formCheck" class="form-check-label text-secondary"><small>Remember Me</small></label>
            </div>
            <div class="forgot">
              <small><a href="#">Forgot Password?</a></small>
            </div>
          </div>
          <div class="input-group">
            <input class="btn btn-lg w-100 fs-6" style="background-color: #030067; color: #ececec;" type="button" onclick="location.href='/register';" value="Create Account">
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
  integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
  integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</html>